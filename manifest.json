{
  "manifest_version": 3,
  "name": "Audio Transcription Assistant",
  "description": "Real-time audio to text conversion for online videos and meetings",
  "version": "1.0.0",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "service_worker": "background_simple.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["debug.js", "content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Audio Transcription Assistant"
  },
  "web_accessible_resources": [
    {
      "resources": ["injected.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
