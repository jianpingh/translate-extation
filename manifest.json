{
  "manifest_version": 3,
  "name": "音频转文本助手",
  "description": "将在线视频和会议中的音频实时转换为文本",
  "version": "1.0.0",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "service_worker": "background_simple.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["debug.js", "content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "音频转文本助手"
  },
  "web_accessible_resources": [
    {
      "resources": ["injected.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
